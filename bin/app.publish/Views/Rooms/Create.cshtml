@model NhaTroAnCu.Models.Room

@{
    ViewBag.Title = "Thêm phòng mới";
}

<h2>Thêm phòng mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Dãy</label>
        @Html.DropDownListFor(m => m.Area, new SelectList(new[] { "A", "B" }), "Chọn dãy", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Tầng</label>
        @Html.TextBoxFor(m => m.Floor, new { @class = "form-control", type = "number", min = 1, max = 4 })
    </div>

    <div class="form-group">
        <label>Số phòng</label>
        @Html.TextBoxFor(m => m.RoomNumber, new { @class = "form-control", type = "number", min = 1, max = 99 })
    </div>

    <div class="form-group">
        <label>Tên phòng (tuỳ chọn)</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Giá mặc định</label>
        @Html.TextBoxFor(m => m.DefaultPrice, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <label>Điều hoà</label>
        @Html.CheckBoxFor(m => m.HasAirCondition)
    </div>

    <div class="form-group">
        <label>Tủ lạnh</label>
        @Html.CheckBoxFor(m => m.HasFridge)
    </div>
    <div class="form-group">
        <label>Bình nóng lạnh</label>
        @Html.CheckBoxFor(m => m.HasWaterHeater)
    </div>
    <div class="form-group">
        <label>Giường</label>
        @Html.CheckBoxFor(m => m.HasBed)
    </div>
    <div class="form-group">
        <label>Tủ</label>
        @Html.CheckBoxFor(m => m.HasWardrobe)
    </div>

    <button type="submit" class="btn btn-primary">Lưu phòng</button>
}
