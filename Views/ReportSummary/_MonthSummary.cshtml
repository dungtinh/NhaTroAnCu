@model NhaTroAnCu.Models.ReportSummaryViewModel

<div class="summary-dashboard">
    <!-- Hoặc thêm class "light" cho theme sáng -->
    <div class="summary-grid">
        <div class="summary-card occupied">
            <i class="fas fa-home summary-icon"></i>
            <div class="summary-label">Đã thuê</div>
            <div class="summary-value">@Model.RentedRooms</div>
        </div>

        <div class="summary-card collected">
            <i class="fas fa-check-circle summary-icon"></i>
            <div class="summary-label">Đã thu</div>
            <div class="summary-value">@Model.PaidRooms</div>
        </div>

        <div class="summary-card revenue">
            <i class="fas fa-dollar-sign summary-icon"></i>
            <div class="summary-label">Tiền đã thu</div>
            <div class="summary-value">@Model.TotalAmount.ToString("N0") đ</div>
        </div>

        <div class="summary-card efficiency">
            <i class="fas fa-chart-line summary-icon"></i>
            <div class="summary-label">Hiệu suất</div>
            <div class="summary-value">@Model.Density.ToString("P2")</div>
        </div>

        <div class="summary-card overdue">
            <i class="fas fa-exclamation-triangle summary-icon"></i>
            <div class="summary-label">Quá hạn</div>
            <div class="summary-value">@Model.OverdueRooms</div>
        </div>
    </div>
</div>