    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="~/js/datepicker.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        $('.money').each(function () {
            var $input = $(this);

            // Tạo hidden input để lưu raw value
            var $hiddenInput = $('<input>')
                .attr('type', 'hidden')
                .attr('name', $input.attr('name'))
                .attr('id', $input.attr('id') + '_raw')
                .insertAfter($input);

            // Đổi name của input display
            $input.attr('name', $input.attr('name') + '_display');

            // Initialize AutoNumeric
            var anInstance = new AutoNumeric($input[0], {
                digitGroupSeparator: '.',
                decimalCharacter: ',',
                decimalPlaces: 0,
                unformatOnSubmit: false // Tắt vì ta tự xử lý
            });

            // Update hidden input khi value thay đổi
            $input.on('input change blur', function () {
                var rawValue = anInstance.getNumber();
                $hiddenInput.val(rawValue);
                console.log('Updated hidden input:', $hiddenInput.attr('name'), '=', rawValue);
            });

            // Set initial value
            if ($input.val()) {
                var initialValue = anInstance.getNumber();
                $hiddenInput.val(initialValue);
            }
        });
        function getMoney(selector) {
            const anElement = AutoNumeric.getAutoNumericElement(selector);
            return anElement ? anElement.getNumber() : 0;
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>