<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nhà trọ An Cư</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/layout.css" rel="stylesheet" />
    <link href="~/Content/datepicker-custom.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("Nhà trọ An Cư", "Index", "Rooms", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "TenantContracts")">
                            <i class="fas fa-user"></i> Danh sách người thuê
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Report", "Payments")">
                            <i class="fas fa-chart-line"></i> Báo cáo thu chi
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "IncomeExpense")">
                            <i class="fas fa-money-check-alt"></i> Thu chi
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <h4>NHÀ TRỌ AN CƯ</h4>
            <p>
                <i class="fas fa-map-marker-alt"></i> ĐỊA CHỈ: THÔN ĐÌNH NGỌ (ẤP), XÃ HỒNG PHONG, HUYỆN AN DƯƠNG, HẢI PHÒNG
                <br /><i class="fas fa-id-card"></i> CHỦ NHÀ TRỌ: TẠ NGỌC DUY - CCCD: 034082002422
                <br /><i class="fas fa-phone"></i> ĐIỆN THOẠI: 0975092833
            </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>

    <script>
        // Khởi tạo AutoNumeric cho tất cả input tiền
        const autoFields = AutoNumeric.multiple('.money', {
            digitGroupSeparator: '.',
            decimalCharacter: ',',
            decimalPlaces: 0,
            unformatOnSubmit: true
        });

        function getMoney(selector) {
            const anElement = AutoNumeric.getAutoNumericElement(selector);
            return anElement ? anElement.getNumber() : 0;
        }

        $(function () {
            $(".datepicker, .datetime").datepicker({
                format: "dd/mm/yyyy",
                autoclose: true,
                todayHighlight: true,
                todayBtn: "linked",
                clearBtn: true,
                language: "vi",
                weekStart: 1,
                startView: 0,
                minViewMode: 0,
                forceParse: false,
                calendarWeeks: false,
                orientation: "bottom auto",
                templates: {
                    leftArrow: '<i class="fas fa-chevron-left"></i>',
                    rightArrow: '<i class="fas fa-chevron-right"></i>'
                }
            });

            // Thêm animation khi mở datepicker
            $('.datepicker, .datetime').on('show.bs.datepicker', function (e) {
                $('.datepicker-dropdown').hide().fadeIn(300);
            });

            // Add fade-in animation to body content
            $('.body-content').addClass('fade-in');
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>