        // Enhanced updateTenantNumbers function
        function updateTenantNumbers() {
            $('#tenantList .tenant-card').each(function (index) {
                $(this).attr('data-tenant-index', index);
                $(this).find('.tenant-card-header span').html(`<i class="fas fa-user"></i> Người thuê #${index + 1}`);

                // Update photo section title
                $(this).find('.photo-upload-section h6').html(`
            <i class="fas fa-camera"></i> Ảnh CCCD/Hộ chiếu cho người thuê #${index + 1}
        `);

                // Update all IDs and attributes
                $(this).find('input[type="file"]').attr({
                    'id': `inputFile${index}`,
                    'data-tenant-index': index
                });

                $(this).find('label[for^="inputFile"]').attr('for', `inputFile${index}`);

                $(this).find('[id^="fileName"], [id^="fileList"], [id^="btn"], [id^="loading"], [id^="results"]').each(function () {
                    var oldId = $(this).attr('id');
                    var prefix = oldId.replace(/\d+$/, '');
                    $(this).attr('id', prefix + index);
                });

                // Update clear button onclick
                $(this).find('button[onclick^="clearTenantFiles"]').attr('onclick', `clearTenantFiles(${index})`);

                // Update form field names and IDs
                $(this).find('input, select').each(function () {
                    var name = $(this).attr('name');
                    var id = $(this).attr('id');

                    if (name && name.includes('Tenants[')) {
                        $(this).attr('name', name.replace(/Tenants\[\d+\]/, `Tenants[${index}]`));
                    }

                    if (id && id.includes('Tenants_')) {
                        var newId = id.replace(/Tenants_\d+__/, `Tenants_${index}__`);
                        $(this).attr('id', newId);
                    }
                });
            });
        }

        // Enhanced remove tenant function
        $(document).on('click', '.remove-tenant', function () {
            if ($('#tenantList .tenant-card').length <= 1) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Không thể xóa',
                    text: 'Hợp đồng phải có ít nhất một người thuê.',
                    confirmButtonText: 'Đã hiểu'
                });
                return;
            }

            $(this).closest('.tenant-card').remove();
            updateTenantNumbers();
        });

        // Initialize on page load
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: "dd/mm/yyyy",
                autoclose: true,
                todayHighlight: true,
                orientation: "bottom"
            });

            // Set tenant index for existing inputs
            $('input[type="file"][name="TenantPhotos"]').each(function (index) {
                $(this).attr('data-tenant-index', index);
            });

            // Handle deposit collection UI
            $('#collectDepositNow').change(function() {
                var isChecked = $(this).is(':checked');
                $('#depositCollectionAmount').prop('disabled', !isChecked);
                if (isChecked) {
                    // Copy deposit amount if not already set
                    var depositAmount = $('input[name="DepositAmount"]').val();
                    if (!$('#depositCollectionAmount').val() && depositAmount) {
                        $('#depositCollectionAmount').val(depositAmount);
                    }
                } else {
                    $('#depositCollectionAmount').val('');
                }
            });

            // Sync deposit amount with collection amount if auto-fill enabled
            $('input[name="DepositAmount"]').change(function() {
                if ($('#collectDepositNow').is(':checked')) {
                    $('#depositCollectionAmount').val($(this).val());
                }
            });
        });

    </script>
