                            </div>

                            <div class="bill-total">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0">Tổng cần thanh toán:</span>
                                    <span class="h3 mb-0 text-danger font-weight-bold">
                                        @(bill.TotalAmount .ToString("N0"))đ
                                    </span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(bill.BillNote))
                            {
                                <div class="mt-3">
                                    <small class="text-muted">Ghi chú:</small>
                                    <div>@bill.BillNote</div>
                                </div>
                            }
                        </div>
                    }
                    else if (contract != null)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có phiếu báo tiền cho hợp đồng #@contract.Id tháng này</p>
                            <p class="text-info">Nhấn nút "Tạo phiếu" để tạo phiếu báo tiền mới</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-exclamation-circle fa-3x text-warning mb-3"></i>
                            <p class="text-muted">Không có hợp đồng hiện tại</p>
                            <p>Vui lòng tạo hợp đồng trước khi tạo phiếu báo tiền</p>
                        </div>
