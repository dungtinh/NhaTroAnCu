@model List<NhaTroAnCu.Models.TenantReportViewModel>
@{
    ViewBag.Title = "Báo cáo danh sách khách thuê";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CSS/contract-tenants.css" rel="stylesheet" />

<div class="tenant-report-container">
    <!-- Header -->
    <div class="report-header">
        <div class="report-title">
            <i class="fas fa-users"></i> Báo cáo danh sách khách thuê
        </div>
        <div class="report-stats">
            <div class="stat-item">
                <i class="fas fa-user"></i>
                <div>
                    <div class="stat-value">@ViewBag.TotalTenants</div>
                    <div class="stat-label">Tổng số người</div>
                </div>
            </div>
            <div class="stat-item">
                <i class="fas fa-door-open"></i>
                <div>
                    <div class="stat-value">@ViewBag.TotalRooms</div>
                    <div class="stat-label">Phòng có người</div>
                </div>
            </div>
            <div class="stat-item">
                <i class="fas fa-building"></i>
                <div>
                    <div class="stat-value">@ViewBag.TotalCompanies</div>
                    <div class="stat-label">Công ty</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <form method="get" action="@Url.Action("Index", "ContractTenants")">
            <div class="filter-row">
                <div class="filter-group">
                    <label>Tìm theo tên</label>
                    <input type="text" name="searchName" value="@ViewBag.SearchName"
                           placeholder="Nhập họ tên..." />
                </div>

                <div class="filter-group">
                    <label>Tìm theo CCCD</label>
                    <input type="text" name="searchCard" value="@ViewBag.SearchCard"
                           placeholder="Nhập số CCCD..." />
                </div>

                <div class="filter-group">
                    <label>Tìm theo phòng</label>
                    <input type="text" name="searchRoom" value="@ViewBag.SearchRoom"
                           placeholder="Nhập tên phòng..." />
                </div>

                <div class="filter-group">
                    <label>Loại hợp đồng</label>
                    <select name="filterContractType">
                        <option value="">-- Tất cả --</option>
                        @foreach (var type in (List<SelectListItem>)ViewBag.ContractTypes)
                        {
                            <option value="@type.Value" @(type.Value == ViewBag.FilterContractType ? "selected" : "")>
                                @type.Text
                            </option>
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label>Công ty</label>
                    <select name="filterCompany">
                        <option value="">-- Tất cả --</option>
                        @foreach (var company in (List<SelectListItem>)ViewBag.Companies)
                        {
                            <option value="@company.Value" @(company.Value == ViewBag.FilterCompany ? "selected" : "")>
                                @company.Text
                            </option>
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label>Trạng thái</label>
                    <select name="filterStatus">
                        <option value="">-- Mặc định (Đang ở) --</option>
                        @foreach (var status in (List<SelectListItem>)ViewBag.Statuses)
                        {
                            <option value="@status.Value" @(status.Value == ViewBag.FilterStatus ? "selected" : "")>
                                @status.Text
                            </option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn-search">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>

                @*<button type="button" class="btn-export" onclick="exportReport()">
                        <i class="fas fa-file-excel"></i> Xuất Excel
                    </button>*@
                <button type="button" class="btn-export" onclick="exportReport()">
                    <i class="fas fa-file-pdf"></i> Xuất PDF
                </button>

                <button type="button" class="btn-reset" onclick="resetFilter()">
                    <i class="fas fa-redo"></i> Đặt lại
                </button>
            </div>
        </form>
    </div>

    <!-- Report Table -->
    <div class="report-table">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th width="100">Ảnh</th>
                        <th>Họ tên</th>
                        <th>CCCD</th>
                        <th>Điện thoại</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Phòng</th>
                        <th>Loại HĐ</th>
                        <th>Công ty</th>
                        <th>Trạng thái</th>
                        <th>Ngày vào</th>
                        <th width="50"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Photo))
                                {
                                    var src = item.Photo != null && item.Photo.Contains(";") ? item.Photo.Split(';')[0].Trim() : item.Photo;
                                    <img src="@src" class="tenant-photo" alt="@item.TenantName" />

                                }
                                else
                                {
                                    <div class="no-photo">
                                        <i class="fas fa-user"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@item.TenantName</strong>
                            </td>
                            <td>@item.IdentityCard</td>
                            <td>@item.PhoneNumber</td>
                            <td>@(item.BirthDate?.ToString("dd/MM/yyyy"))</td>
                            <td>@item.Gender</td>
                            <td>
                                <span class="room-badge">@item.RoomName</span>
                            </td>
                            <td>
                                @if (item.ContractType == "Individual")
                                {
                                    <span class="contract-type-badge type-individual">Cá nhân</span>
                                }
                                else
                                {
                                    <span class="contract-type-badge type-company">Công ty</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.CompanyName))
                                {
                                    <span class="company-name">@item.CompanyName</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                @if (item.ContractStatus == "Active")
                                {
                                    <span class="status-badge status-active">Đang ở</span>
                                }
                                else if (item.ContractStatus == "Expired")
                                {
                                    <span class="status-badge status-expired">Hết hạn</span>
                                }
                                else
                                {
                                    <span class="status-badge status-terminated">Đã kết thúc</span>
                                }
                            </td>
                            <td>@(item.MoveInDate?.ToString("dd/MM/yyyy"))</td>
                            <td>
                                <a href="@Url.Action("Details", "Rooms", new { id = item.RoomId })"
                                   class="btn btn-sm btn-link" title="Xem phòng">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-inbox"></i>
                <div>Không có dữ liệu</div>
            </div>
        }
    </div>
</div>
@section Scripts {

    <script>
        function resetFilter() {
            window.location.href = '@Url.Action("Index", "ContractTenants")';
        }

        function exportReport() {
            var params = new URLSearchParams(window.location.search);
            var exportUrl = '@Url.Action("Export", "ContractTenants")?' + params.toString();
            window.location.href = exportUrl;
        }
    </script>
}