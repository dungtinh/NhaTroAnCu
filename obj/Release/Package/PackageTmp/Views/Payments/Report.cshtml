@model IEnumerable<NhaTroAnCu.Models.PaymentHistory>
@{
    ViewBag.Title = "Doanh thu tháng";
}

<h2>Doanh thu tháng @Request["month"]/ @Request["year"]</h2>

<table class="table table-bordered">
    <tr>
        <th>Phòng</th>
        <th>Tháng</th>
        <th>Tổng tiền</th>
        <th>Ngày nộp</th>
        <th>Ghi chú</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Room.Name</td>
            <td>@p.Month/@p.Year</td>
            <td>@p.TotalAmount.ToString("N0")</td>
            <td>@p.PaidDate.ToString("dd/MM/yyyy")</td>
            <td>@p.Note</td>
        </tr>
    }
</table>

<h3>Tổng cộng: <span class="text-danger">@ViewBag.Total.ToString("N0")</span> đ</h3>
