@model NhaTroAnCu.Models.Room

@{
    ViewBag.Title = "Xóa phòng";
}

<h2>Bạn có chắc muốn xóa phòng @Model.Name?</h2>

<div>
    <h4>Phòng: @Model.Name</h4>
    <dl class="dl-horizontal">
        <dt>Dãy</dt>
        <dd>@Model.Area</dd>
        <dt>Tầng</dt>
        <dd>@Model.Floor</dd>
        <dt>Giá</dt>
        <dd>@Model.DefaultPrice.ToString("N0") VND</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Rooms", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Xóa</button>
        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default" })
    }
</div>
